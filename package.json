{
  "name": "@e22m4u/ts-reflector",
  "version": "0.1.6",
  "description": "Typed wrapper for The Metadata Reflection API",
  "author": "e22m4u <e22m4u@yandex.ru>",
  "license": "MIT",
  "keywords": [
    "reflection",
    "metadata",
    "reflector"
  ],
  "homepage": "https://github.com/e22m4u/ts-reflector",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/e22m4u/ts-reflector.git"
  },
  "type": "module",
  "types": "./dist/esm/index.d.ts",
  "module": "./dist/esm/index.js",
  "main": "./dist/cjs/index.cjs",
  "exports": {
    "types": "./dist/esm/index.d.ts",
    "import": "./dist/esm/index.js",
    "require": "./dist/cjs/index.cjs"
  },
  "engines": {
    "node": ">=12"
  },
  "scripts": {
    "build:esm": "tsc --build",
    "build:cjs": "rimraf ./dist/cjs && node --no-warnings=ExperimentalWarning build-cjs.js",
    "build": "rimraf dist && npm run build:esm && npm run build:cjs",
    "postbuild": "rimraf ./dist/**/*.spec.* --glob ./dist/tsconfig.tsbuildinfo",
    "lint": "eslint ./src",
    "lint:fix": "eslint ./src --fix",
    "format": "prettier --write \"./src/**/*.ts\"",
    "test": "npm run lint && c8 --reporter=text-summary mocha",
    "test:coverage": "npm run lint && c8 --reporter=text mocha",
    "prepare": "husky"
  },
  "dependencies": {
    "reflect-metadata": "~0.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "~19.6.1",
    "@commitlint/config-conventional": "~19.6.0",
    "@eslint/js": "~9.18.0",
    "@types/chai": "~5.0.1",
    "@types/mocha": "~10.0.10",
    "@types/node": "~22.10.7",
    "c8": "~10.1.3",
    "chai": "~5.1.2",
    "esbuild": "~0.24.2",
    "eslint": "~9.18.0",
    "eslint-config-prettier": "~10.0.1",
    "eslint-plugin-chai-expect": "~3.1.0",
    "eslint-plugin-mocha": "~10.5.0",
    "husky": "~9.1.7",
    "mocha": "~11.0.1",
    "prettier": "~3.4.2",
    "rimraf": "~6.0.1",
    "tsx": "~4.19.2",
    "typescript": "~5.7.3",
    "typescript-eslint": "~8.21.0"
  }
}
